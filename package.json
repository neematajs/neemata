{
  "name": "neemata",
  "private": true,
  "type": "module",
  "scripts": {
    "clean-build": "pnpm run --parallel -r clean-build",
    "build": "pnpm run clean-build && pnpm tsgo -b tsconfig.build.json && pnpm run --parallel -r build",
    "dev": "pnpm run clean-build && pnpm tsgo -b tsconfig.build.json --watch",
    "clean": "rm -rf dist node_modules && pnpm -r exec rm -rf dist node_modules",
    "test": "pnpm build && vitest --run",
    "test:integration": "vitest run tests/test/integration",
    "test:e2e": "vitest run playground/test --exclude playground/test/jobs.spec.ts",
    "test:e2e:jobs": "pnpm run test:e2e:jobs:redis && pnpm run test:e2e:jobs:valkey",
    "test:e2e:jobs:redis": "JOBS_BACKEND=redis vitest run playground/test/jobs.spec.ts",
    "test:e2e:jobs:valkey": "JOBS_BACKEND=valkey vitest run playground/test/jobs.spec.ts",
    "test:e2e:jobs:docker": "sh -c 'docker compose -f docker-compose.jobs-e2e.yml run --rm test-redis && docker compose -f docker-compose.jobs-e2e.yml run --rm test-valkey; code=$?; pnpm run docker:jobs:down; exit $code'",
    "test:unit": "vitest run packages/*",
    "test:browser:client": "vitest run -c packages/client/vitest.browser.config.ts",
    "test:dev": "vitest dev --ui --coverage",
    "check:type": "pnpm tsgo -b tsconfig.json --noEmit",
    "check:lint": "biome lint --diagnostic-level=error .",
    "check:fmt": "biome format --diagnostic-level=error .",
    "check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
    "fmt": "biome check --diagnostic-level=error --write .",
    "docker:jobs:redis:up": "docker compose -f docker-compose.jobs-e2e.yml up -d --wait redis",
    "docker:jobs:valkey:up": "docker compose -f docker-compose.jobs-e2e.yml up -d --wait valkey",
    "docker:jobs:down": "docker compose -f docker-compose.jobs-e2e.yml down -v --remove-orphans",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.14",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24",
    "@typescript/native-preview": "7.0.0-dev.20260210.1",
    "@vitest/coverage-v8": "4.0.18",
    "@vitest/browser-playwright": "4.0.18",
    "@vitest/ui": "4.0.18",
    "husky": "^9.1.7",
    "playwright": "^1.53.2",
    "vitest": "4.0.18"
  },
  "packageManager": "pnpm@10.29.3+sha512.498e1fb4cca5aa06c1dcf2611e6fafc50972ffe7189998c409e90de74566444298ffe43e6cd2acdc775ba1aa7cc5e092a8b7054c811ba8c5770f84693d33d2dc"
}
