{
  "name": "neemata-core",
  "private": true,
  "type": "module",
  "scripts": {
    "clean-build": "pnpm run --parallel -r clean-build",
    "build": "pnpm run clean-build && pnpm run --parallel -r build",
    "build:publish": "pnpm run --filter !proxy --parallel -r build",
    "dev": "pnpm run clean-build && pnpm run --parallel -r dev",
    "clean": "rm -rf dist node_modules && pnpm -r exec rm -rf dist node_modules",
    "test": "pnpm build && pnpm test:unit && pnpm test:integration",
    "test:integration": "vitest run tests/test/integration",
    "test:sustainability": "vitest run --logHeapUsage tests/test/sustainability",
    "test:unit": "vitest run packages/*",
    "test:dev": "vitest dev --ui --coverage",
    "test:runtime": "pnpm --parallel --filter neemata-test-bun --filter neemata-test-deno --filter neemata-test-node run test",
    "test:runtime:bun": "pnpm --filter neemata-test-bun run test",
    "test:runtime:node": "pnpm --filter neemata-test-node run test",
    "test:runtime:deno": "pnpm --filter neemata-test-deno run test",
    "check:type": "pnpm run --parallel -r type-check",
    "check:lint": "biome lint --diagnostic-level=error . && pnpm --filter proxy lint",
    "check:fmt": "biome format --diagnostic-level=error .",
    "check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
    "fmt": "biome check --diagnostic-level=error --write . && pnpm --filter proxy fmt",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@tsconfig/node24": "^24.0.3",
    "@types/node": "^24",
    "@vitest/coverage-v8": "4.0.14",
    "@vitest/ui": "4.0.14",
    "husky": "^9.1.7",
    "typescript": "5.9.3",
    "vitest": "4.0.14"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a"
}
