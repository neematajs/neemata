{
  "name": "neemata-core",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "pnpm run --parallel --filter \"*\" build",
    "build:watch": "pnpm run --parallel --filter \"*\" build --watch",
    "clean": "rm -rf dist node_modules && pnpm -r exec rm -rf dist node_modules",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "check:type": "pnpm run --parallel --filter \"*\" type-check",
    "check:lint": "biome lint .",
    "check:fmt": "biome format .",
    "check": "pnpm run check:fmt && pnpm run check:lint && pnpm run check:type",
    "fmt": "biome check --write .",
    "prepare": "husky",
    "publish-tag": "node --no-warnings ./scripts/publish-tag.js"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.0",
    "@neematajs/builder": "github:neematajs/builder#4496c5af26eac35ee2468d6abd06ff531d743c96",
    "@types/node": "^20.14.11",
    "husky": "^9.0.11",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  },
  "workspaces": [
    "./packages/*"
  ],
  "packageManager": "pnpm@9.5.0",
  "version": "1.0.0"
}
