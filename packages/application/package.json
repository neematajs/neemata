{
  "name": "@neematajs/application",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "exports": {
    ".": "./index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "bun": "./index.ts",
        "import": "./dist/index.js",
        "types": "./index.ts"
      }
    }
  },
  "scripts": {
    "build": "bun build index.ts $(pnpm --silent -w run entrypoints $(pwd) lib) --outdir=dist --splitting --external=\\* --sourcemap=external --target=node",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "pino": "^9.0.0",
    "pino-pretty": "^11.0.0"
  },
  "devDependencies": {
    "@neematajs/common": "workspace:*"
  },
  "peerDependencies": {
    "@neematajs/common": "workspace:*",
    "typescript": "^5.0.0",
    "@sinclair/typebox": "^0.32",
    "zod": "^3"
  },
  "peerDependenciesMeta": {
    "@sinclair/typebox": {
      "optional": true
    },
    "zod": {
      "optional": true
    }
  }
}
