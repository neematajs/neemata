{
  "name": "@nmtjs/type",
  "description": "Schema system and encode/decode helpers for Neemata types.",
  "type": "module",
  "files": [
    "dist",
    "src",
    "LICENSE.md",
    "README.md"
  ],
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./dist/index.js",
      "module-sync": "./dist/index.js"
    },
    "./*": {
      "types": "./src/types/*.ts",
      "import": "./dist/types/*.js",
      "module-sync": "./dist/types/*.js"
    },
    "./temporal": {
      "types": "./src/temporal/global.ts",
      "import": "./dist/temporal/global.js",
      "module-sync": "./dist/temporal/global.js"
    },
    "./temporal-polyfill": {
      "types": "./src/temporal/polyfill.ts",
      "import": "./dist/temporal/polyfill.js",
      "module-sync": "./dist/temporal/polyfill.js"
    }
  },
  "publishConfig": {
    "exports": {
      ".": {
        "types": "./dist/index.d.ts",
        "import": "./dist/index.js",
        "module-sync": "./dist/index.js"
      },
      "./*": {
        "types": "./dist/types/*.d.ts",
        "import": "./dist/types/*.js",
        "module-sync": "./dist/types/*.js"
      },
      "./temporal": {
        "types": "./dist/temporal/global.d.ts",
        "import": "./dist/temporal/global.js",
        "module-sync": "./dist/temporal/global.js"
      },
      "./temporal-polyfill": {
        "types": "./dist/temporal/polyfill.d.ts",
        "import": "./dist/temporal/polyfill.js",
        "module-sync": "./dist/temporal/polyfill.js"
      }
    }
  },
  "scripts": {
    "clean-build": "rm -rf ./dist"
  },
  "dependencies": {
    "@standard-schema/spec": "^1.1.0",
    "temporal-spec": "^0.3.0"
  },
  "peerDependencies": {
    "@nmtjs/common": "workspace:*",
    "temporal-polyfill": "^0.3.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@nmtjs/common": "workspace:*",
    "temporal-polyfill": "^0.3.0",
    "zod": "catalog:"
  },
  "peerDependenciesMeta": {
    "temporal-polyfill": {
      "optional": true
    }
  }
}
