{
  "name": "@neematajs/server",
  "version": "1.0.0-alpha.1",
  "type": "module",
  "scripts": {
    "build": "bun build index.ts $(pnpm --silent -w run entrypoints $(pwd) lib) --outdir=dist --splitting --external=\\* --sourcemap=external --target=node ",
    "type-check": "tsc --noEmit"
  },
  "exports": {
    ".": "./index.ts"
  },
  "publishConfig": {
    "exports": {
      ".": {
        "bun": "./index.ts",
        "import": "./dist/index.js",
        "types": "./index.ts"
      }
    }
  },
  "peerDependencies": {
    "@neematajs/application": "workspace:*",
    "@neematajs/common": "workspace:*"
  },
  "devDependencies": {
    "@neematajs/application": "workspace:*",
    "@neematajs/common": "workspace:*"
  }
}
